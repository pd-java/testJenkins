                password,
            </if>
            <if test="sex != null">
                sex ,
            </if>
            <if test="age != null">
                age,
            </if>
            <if test="job != null">
                job,
            </if>
            <if test="enabled != null">
                enabled,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="username != null">
                #{username,jdbcType=VARCHAR},
            </if>
            <if test="password != null">
                #{password,jdbcType=VARCHAR},
